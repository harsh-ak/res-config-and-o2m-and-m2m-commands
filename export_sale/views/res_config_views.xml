<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_for_sale" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
             <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
              <xpath expr="//div[@id='connectors_setting_container']" position="after">
                   <h2>Status</h2>
                    <div  class="row mt16 o_settings_container">
                     <div class="col-12 col-lg-4 o_setting_box" id="record_status">
                        <label for="record_status" class="o_dark_label"/>
                        <br></br>

                        <field name="record_status" class="oe_inline"/>
                    </div> 
                    </div> 
                </xpath>
            </field>
        </record>
</odoo>